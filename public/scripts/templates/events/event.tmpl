<section class="container">	
	<form id="new_event" action="new_submit" method="get" accept-charset="utf-8">
		<h3>New Event</h3>
	
		<section class="temp_time_controls">
				<label for="">From:</label><input type="text" size="40" value="{{model.from_date}}    {{{model.from_hours}}} {{{model.from_minutes}}}" id="time_from"><br />			
				<label for="">Duration:</label><input type="text" size="40" value="{{model.duration_minutes}}" id="time_duration"><br />		
				<label for="">To:</label><input type="text" name="" size="40" value="{{model.from_date}}    {{model.till}}" id="time_to">			
		</section>
		
		<section class="time">			
			<section class="from">
				<span>From:</span>
				<select id="hours">{{{show_hours model.from_hours}}}</select>
				<span>:</span>
				<select id="minutes">{{{show_minutes model.from_minutes}}}</select>
				
				<span id="date">{{model.from_date}}</span>
			</section>
			
			<section class="duration">
				<span>Duration:</span>
				<div class="layout-slider">
					<input id="SliderSingle" type="slider" name="price" value="20" />
				</div>			    
			</section>
			
			<section class="to">
				<span>To:</span>
				<span id="time"></span>
				<span id="date">{{model.till}}</span>									
			</section>		    		
		</section>	
		
		<input type="text"  size="58" name="" value="{{model.title}}" id="title" placeholder="Title:">
		<textarea name="Name" rows="8" cols="40" id="description" placeholder="Description:">{{model.description}}</textarea>		

		<section class="members">
			<select id="members" data-placeholder="Choose a member..." multiple="multiple" style="width: 412px;">
				{{#each all_members}}
				<option {{should_be_selected this ../model.members}} value="{{this.id}}">{{this.display_name}}</option>	
				{{/each}}											
			</select>
		</section>	
		
		<ul id="errors"></ul>
		<section class="controls">
			<input type="button" value="Create" class="create_button">			
			<input type="button" value="Cancel" class="save_button">
		</section>	
	
	</form>
</section>